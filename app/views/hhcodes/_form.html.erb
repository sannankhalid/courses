<%= form_for @hhcode, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :doers, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :doers, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :persuaders, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :persuaders, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :helpers, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :helpers, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :creators, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :creators, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :thinkers, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :thinkers, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :organizers, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :organizers, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hhcodes_path, :class => 'btn' %>
  </div>
<% end %>
