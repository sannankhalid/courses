<%- model_class = Hhcode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:doers) %></th>
      <th><%= model_class.human_attribute_name(:persuaders) %></th>
      <th><%= model_class.human_attribute_name(:helpers) %></th>
      <th><%= model_class.human_attribute_name(:creators) %></th>
      <th><%= model_class.human_attribute_name(:thinkers) %></th>
      <th><%= model_class.human_attribute_name(:organizers) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @hhcodes.each do |hhcode| %>
      <tr>
        <td><%= link_to hhcode.id, hhcode_path(hhcode) %></td>
        <td><%= hhcode.doers %></td>
        <td><%= hhcode.persuaders %></td>
        <td><%= hhcode.helpers %></td>
        <td><%= hhcode.creators %></td>
        <td><%= hhcode.thinkers %></td>
        <td><%= hhcode.organizers %></td>
        <td><%=l hhcode.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_hhcode_path(hhcode), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      hhcode_path(hhcode),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_hhcode_path,
            :class => 'btn btn-primary' %>
