<%- model_class = Algorithm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question) %>:</strong></dt>
  <dd><%= @algorithm.question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trait) %>:</strong></dt>
  <dd><%= Algorithm::PERSONALITY_TYPE[@algorithm.trait] %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              algorithms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_algorithm_path(@algorithm), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              algorithm_path(@algorithm),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
