<%= form_for @algorithm, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trait, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :trait,Algorithm::PERSONALITY_TYPE.map{|k,v| [v,k]},:selected => f.object.trait,:prompt => "Select a Trait ",:class=>"select" %>      
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                algorithms_path, :class => 'btn' %>
  </div>
<% end %>
