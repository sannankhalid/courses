<%- model_class = Department -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= @department.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @department.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:personality) %>:</strong></dt>
  <dd><%= @department.personality_types.map { |e| Algorithm::PERSONALITY_TYPE[e.to_i]  }.join(",") %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              departments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_department_path(@department), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              department_path(@department),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
